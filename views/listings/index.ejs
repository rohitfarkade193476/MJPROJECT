<% layout("/layouts/boilerplate") %>
<body>
<h3>All Listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col">
        <!-- If 'image' is an object with 'url', use it; else, treat as a direct string -->
           <img src="<%= listing.image && listing.image.url ? listing.image.url : listing.image %>" 
             class="card-img-top" alt="listing_image" style="height: 20rem;"/>
             <div class="card-img-overlay"></div>
             <div class="card-body">
              <p class="card-text"> 
               <b><%= listing.title %><br/></b>
                &#8377;<%= listing.price.toLocaleString("en-IN")  %> / night
              </p>
        </div>
    </div>
      <% } %>
    </div>

    
</body>